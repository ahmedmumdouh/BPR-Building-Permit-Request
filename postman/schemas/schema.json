    "tags": [
        {
            "name": "admins",
            "description": "Secured Admin-only calls"
        },
        {
            "name": "developers",
            "description": "Operations available to regular developers"
        }
    ],
    "schemes": [
        "https"
    ],
    "paths": {
        "/bprlicenserequest": {
            "post": {
                "tags": [
                    "admins"
                ],
                "summary": "create/update BPR request",
                "description": "Create or Update Building Permit Request",
                "operationId": "bprlicenserequest",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "Building Permit Request",
                        "description": "Building Permit Request",
                        "required": false,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "RequestId": {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                "IDOrResidenceNumber": {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                "Name": {
                                    "type": "string"
                                },
                                "DateOfBirth": {
                                    "type": "string"
                                },
                                "MobileNumber": {
                                    "type": "string"
                                },
                                "Gender": {
                                    "type": "string"
                                },
                                "Email": {
                                    "type": "string"
                                },
                                "Latitude": {
                                    "type": "number"
                                },
                                "Longitude": {
                                    "type": "number"
                                },
                                "EngineeringOfficeName": {
                                    "type": "string"
                                },
                                "PlotNumber": {
                                    "type": "number"
                                },
                                "SectorNumber": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "BPR Request added/updated",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "RequestId": {
                                    "type": "integer",
                                    "minimum": 1
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "internal error in Appian System",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/bpruplaoddocuments": {
            "post": {
                "tags": [
                    "admins"
                ],
                "summary": "uplaod 3 documents related to the request submission or update",
                "description": "uplaod 3 documents related to the request submission or update",
                "operationId": "bpruplaoddocuments",
                "consumes": [
                    "based on uploaded file type (application/pdf, image/png ....)"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "Appian-Document-Name",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "RequestId",
                        "in": "query",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "DocumentType",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "enum": [
                            "LandInstrument",
                            "CertifiedSketch",
                            "DesignApprovedByAlUlaDesignStudio"
                        ]
                    },
                    {
                        "in": "body",
                        "name": "document",
                        "description": "document to be uploaded in binary representation.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "binary",
                            "example": "document"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "document uploaded to Appian Successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "DocumentId": {
                                    "type": "integer",
                                    "minimum": 1
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "400 Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "internal error in Appian System",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/bprgetrequestbyid": {
            "get": {
                "tags": [
                    "admins"
                ],
                "summary": "get all BPR request details by id(including license id if uplaoded & request status)",
                "description": "get all BPR request details by id(including license id if uplaoded & request status)",
                "operationId": "bprgetrequestbyid",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "RequestId",
                        "in": "query",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "request details returned successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "RequestId": {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                "IDOrResidenceNumber": {
                                    "type": "string"
                                },
                                "Name": {
                                    "type": "string"
                                },
                                "DateOfBirth": {
                                    "type": "string"
                                },
                                "MobileNumber": {
                                    "type": "string"
                                },
                                "Gender": {
                                    "type": "string"
                                },
                                "Email": {
                                    "type": "string"
                                },
                                "Latitude": {
                                    "type": "number"
                                },
                                "Longitude": {
                                    "type": "number"
                                },
                                "EngineeringOfficeName": {
                                    "type": "string"
                                },
                                "PlotNumber": {
                                    "type": "number"
                                },
                                "SectorNumber": {
                                    "type": "number"
                                },
                                "RequestStatus": {
                                    "type": "string",
                                    "enum": [
                                        "Pending With Operation Team",
                                        "Under Assigned Group Review",
                                        "Under Operation Team Review",
                                        "Under Operations Head Review",
                                        "Complete - Approved",
                                        "Complete - Rejected"
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "400 Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "404 Not Found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "internal error in Appian System",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/bprdownloaddocumentbyrequestid": {
            "get": {
                "tags": [
                    "admins"
                ],
                "summary": "get any uploaded document by it's Appian doc id",
                "description": "get any uploaded document by it's Appian doc id",
                "operationId": "bprdownloaddocumentbyrequestid",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "RequestId",
                        "in": "query",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "DocumentType",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "enum": [
                            "LandInstrument",
                            "CertifiedSketch",
                            "DesignApprovedByAlUlaDesignStudio",
                            "License"
                        ]
                    }
                ],
                "responses": {
                    "200": {
                        "description": "return the document",
                        "headers": {
                            "File-Name": {
                                "type": "string",
                                "description": "name.extension"
                            }
                        },
                        "schema": {
                            "type": "string",
                            "format": "binary"
                        }
                    },
                    "400": {
                        "description": "400 Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "404 Not Found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "internal error in Appian System",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}